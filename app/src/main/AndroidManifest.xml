<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.uninsubria.socialmusic">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_social_music_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_social_music_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialMusic">
        <activity
            android:name=".ImagePopupActivity"
            android:theme="@style/AppTheme.ImagePopUp"/>
        <activity android:name=".UsersProfileActivity" />
        <activity
            android:name=".PopupActivity"
            android:theme="@style/AppTheme.PopUpWindowTheme" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".ListActivity" />
        <activity
            android:name=".home.HomeActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".chat.ChatActivity" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/app_name" />
    </application>

</manifest>