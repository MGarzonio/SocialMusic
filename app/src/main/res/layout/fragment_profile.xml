<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ProfileFragment"
    android:background="@color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:contentDescription="@string/profile_picture"
        app:layout_constraintBottom_toTopOf="@id/table"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/default_profile" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/actionsRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">

            <TextView
                android:id="@+id/textViewNickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center"
                android:text="@string/username"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <EditText

                android:id="@+id/editTextNickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center"
                android:text="@string/name"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="45dp">

            <TextView
                android:id="@+id/textViewSurname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center"
                android:text="@string/surname"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/editTextSurname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center"
                android:text="@string/address"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center"
                android:text="@string/email"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/actionsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table"
        app:layout_constraintBottom_toTopOf="@id/bottomRow"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="45dp" >

            <Button
                android:id="@+id/buttonInstruments"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/list_selector_background"
                android:text="@string/musical_instruments"
                android:textColor="@color/teal_700" />

            <Button
                android:id="@+id/buttonGenres"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/list_selector_background"
                android:text="@string/musical_genres"
                android:textColor="@color/teal_700" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/bottomRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:stretchColumns="0, 1"
        app:layout_constraintTop_toBottomOf="@id/actionsRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@android:drawable/list_selector_background"
                android:text="@string/edit_profile"
                android:textAlignment="center"
                android:textColor="#0000FF" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="@android:drawable/list_selector_background"
                android:text="@string/logout"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_error" />

            <ImageView
                android:id="@+id/mapsButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="H,1:1"
                android:layout_column="2"
                android:src="@mipmap/google_maps_foreground" />


        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>